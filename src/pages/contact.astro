---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "@id": "https://okraorders.com/contact",
    "url": "https://okraorders.com/contact",
    "name": `Contact Us | ${SITE.title}`,
    "description": `Get in touch with ${SITE.title} for support or inquiries.`,
    "isPartOf": {
      "@type": "WebSite",
      "url": SITE.url,
      "name": SITE.title,
      "description": SITE.description_short,
    },
    "inLanguage": "en-US"
  }}
>
  <ContactSection />
</MainLayout>

---
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Privacy Policy | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://okraorders.com/privacy",
    "url": "https://okraorders.com/privacy",
    "name": `Privacy Policy | ${SITE.title}`,
    "description": `Privacy policy for ${SITE.title} catering order management software.`,
    "isPartOf": {
      "@type": "WebSite",
      "url": SITE.url,
      "name": SITE.title,
      "description": SITE.description_short,
    },
    "inLanguage": "en-US"
  }}
>
  <section class="py-16 md:py-24">
    <div class="container mx-auto px-6 lg:px-8 max-w-4xl">
      <h1 class="text-4xl font-bold text-neutral-800 mb-8">Privacy Policy</h1>
      
      <div class="prose prose-lg max-w-none text-neutral-700">
        

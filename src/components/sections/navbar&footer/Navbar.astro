---
//Import relevant dependencies
// REMOVED: import ThemeIcon from "@components/ThemeIcon.astro";
import NavLink from "@components/ui/links/NavLink.astro";
import Authentication from "../misc/Authentication.astro";
import stringsData from "@utils/navigation.ts"; // Renamed import
import type { NavLinkItem } from "@utils/navigation.ts"; // Import type
import BrandLogo from "@components/BrandLogo.astro";
import PrimaryCTA from "@components/ui/buttons/PrimaryCTA.astro"; // Import Primary CTA for Signup
// REMOVED: import Icon from "@components/ui/icons/Icon.astro"; // Import Icon for dropdown arrow
// REMOVED: import Button from "@components/ui/buttons/Button.astro";
// REMOVED: import LanguagePicker from "@components/ui/LanguagePicker.astro";

const { navBarLinks } = stringsData; // Destructure directly
const homeUrl = "/"; // Defaulting to root
---

<!-- Main header component -->
<header
  class="sticky inset-x-0 top-4 z-50 flex w-full flex-wrap text-sm md:flex-nowrap md:justify-start"
>
  <!-- Navigation container -->
  <nav
    class="relative mx-2 w-full rounded-[36px] border border-gray-200 bg-white px-4 py-3 shadow-sm md:flex md:items-center md:justify-between md:px-6 md:py-0 lg:px-8 xl:mx-auto"
    aria-label="Global"
  >
    <div class="flex items-center justify-between">
      <!-- Brand logo -->
      <a
        class="flex-none rounded-lg text-xl font-bold outline-none ring-zinc-500 focus-visible:ring-2 focus-visible:ring-primary"
        href={homeUrl}
        aria-label="Brand"
      >
        <BrandLogo />
      </a>
      <!-- Collapse toggle for smaller screens -->
      <div class="ml-auto mr-5 md:hidden">
        <button
          type="button"
          class="hs-collapse-toggle flex h-8 w-8 items-center justify-center rounded-full text-sm font-bold text-neutral-600 transition duration-300 hover:bg-neutral-100 disabled:pointer-events-none disabled:opacity-50 focus:outline-none focus:ring-2 focus:ring-gray-400"
          data-hs-collapse="#navbar-collapse-with-animation"
          aria-controls="navbar-collapse-with-animation"
          aria-label="Toggle navigation"
        >
          <svg
            class="size-4 shrink-0 hs-collapse-open:hidden"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="3" x2="21" y1="6" y2="6"></line>
            <line x1="3" x2="21" y1="12" y2="12"></line>
            <line x1="3" x2="21" y1="18" y2="18"></line>
          </svg>
          <svg
            class="hidden size-4 shrink-0 hs-collapse-open:block"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M18 6 6 18"></path>
            <path d="m6 6 12 12"></path>
          </svg>
        </button>
      </div>
    </div>
    <!-- Contains navigation links -->
    <div
      id="navbar-collapse-with-animation"
      class="hs-collapse hidden grow basis-full overflow-hidden transition-all duration-300 md:block"
    >
      <!-- Navigation links container -->
      <div
        class="mt-5 flex flex-col gap-x-0 gap-y-4 md:mt-0 md:flex-row md:items-center md:justify-end md:gap-x-2 lg:gap-x-4 md:gap-y-0 md:ps-7"
      >
        <!-- Generate Nav Links -->
        {
          navBarLinks.map((link: NavLinkItem) => {
            if (link.subLinks && link.subLinks.length > 0) {
              // STRICTLY Replicate LanguagePicker's Dropdown Structure
              return (
                <div class="hs-dropdown relative inline-flex py-1">
                  <button
                    id={`hs-dropdown-${link.name.toLowerCase()}`}
                    type="button"
                    aria-label={link.name}
                    class="hs-dropdown-toggle inline-flex items-center gap-x-2 rounded-lg px-2 py-2 text-base font-medium text-neutral-600 outline-none ring-zinc-500 transition duration-300 hover:bg-neutral-100 hover:text-primary focus:text-primary focus-visible:ring-2 focus-visible:ring-primary"
                  >
                    {link.name}
                    {/* Chevron SVG */}
                    <svg
                      class="size-4 hs-dropdown-open:rotate-180"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="m6 9 6 6 6-6"></path>
                    </svg>
                  </button>

                  <div
                    class="hs-dropdown-menu duration top-full z-10 mt-2 hidden w-48 min-w-max! rounded-lg bg-white p-2 opacity-0 shadow-md ring-1 ring-gray-200 transition-[opacity,margin] before:absolute before:-top-4 before:start-0 before:h-4 before:w-full after:absolute after:-bottom-4 after:start-0 after:h-4 after:w-full hs-dropdown-open:opacity-100"
                    aria-labelledby={`hs-dropdown-${link.name.toLowerCase()}`}
                  >
                    {link.subLinks.map((subLink) => (
                      <a
                        class="flex items-center gap-x-3.5 rounded-lg px-3 py-2 text-base text-neutral-800 hover:bg-neutral-100 focus:bg-neutral-100 focus:text-primary focus:outline-none"
                        href={subLink.url}
                      >
                        {subLink.name}
                      </a>
                    ))}
                  </div>
                </div>
              );
            } else {
              // Render standard NavLink
              return <NavLink url={link.url} name={link.name} />;
            }
          })
        }

        {/* Live Demo Link */}
        <a
          href="https://demo.okraorders.com"
          target="_blank"
          rel="noopener noreferrer"
          class="px-2 py-2 text-base font-semibold text-primary transition duration-300 hover:text-primary/80"
        >
          Try Live Demo
        </a>

        {/* Authentication */}
        <Authentication />

        {/* ADDED: Signup Button */}
        <PrimaryCTA title="Get Started Free" url="/signup" noArrow={true} />
      </div>
    </div>
  </nav>
</header>

{/* REMOVED: dark:bg-neutral-900 */}
<footer class="w-full bg-neutral-300">
  <div
    class="mx-auto w-full max-w-[85rem] px-4 py-10 sm:px-6 lg:px-16 lg:pt-20 2xl:max-w-(--breakpoint-2xl)"
  >
    <div class="grid grid-cols-2 gap-8 md:grid-cols-4 lg:grid-cols-5"> {/* Increased gap */}
      {/* Column 1: Logo and Description */}
      <div class="col-span-full lg:col-span-2"> {/* Span 2 cols on lg */}
        {/* MODIFIED: Removed fixed width, uses default */}
        <BrandLogo class="mb-4" />
        <p class="text-sm text-neutral-600"> {/* Use secondary color */}
           The smarter way to manage your catering business online.
        </p>
      </div>

      {/* Columns 2-4: Link Sections */}
      {
        strings.footerLinks.map((section) => (
          <div class="col-span-1">
             {/* MODIFIED: text-neutral-800 -> text-secondary font-semibold */}
            <h3 class="font-semibold text-secondary mb-4"> {/* Added margin */}
              {section.section}
            </h3>
            <ul class="space-y-2 text-sm"> {/* Adjusted spacing */}
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.url}
                    target={link.external ? "_blank" : "_self"}
                    rel={link.external ? "noopener noreferrer" : ""}
                    class="inline-flex gap-x-2 rounded-lg text-secondary outline-hidden ring-zinc-500 transition duration-300 hover:text-primary focus-visible:ring-3"
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }

      {/* REMOVED: Newsletter Section */}
      {/* <div class="col-span-2"> ... </div> */}
    </div>

    {/* Bottom Row: Copyright and Social Links */}
    <div
      class="mt-8 pt-8 border-t border-neutral-400 sm:flex sm:items-center sm:justify-between"
    >

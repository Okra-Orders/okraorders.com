---
// Import the Image component from astro:assets
import { Image } from "astro:assets";
// Import the logo image
import logo from "@/images/okra-logo.png";

// Define props, including potential width, height, and class overrides
interface Props {
  width?: number;
  height?: number;
  class?: string;
}

// Set default values if needed, or infer from image dimensions
// Adjusted default width to 140px and height proportionally to 32px
const { width = 110, class: className } = Astro.props;
---

<!-- Eager load logo as it's likely LCP -->
<Image
  src={logo}
  alt="Okra Orders Logo"
  width={width}
  loading="eager"
  decoding="async"
  class:list={[className]}
/>

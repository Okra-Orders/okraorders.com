---
import { Image } from "astro:assets";
import logoImage from "@/images/okra-logo.png";

// Define props, including potential width, height, and class overrides
interface Props {
  width?: number;
  height?: number;
  class?: string;
}

// Set default values if needed
// Using width = 110 for consistency with previous code
const { width = 110, height, class: className } = Astro.props;

// Calculate height proportionally if not provided (assuming original aspect ratio)
// We need the original image dimensions for this, let's assume 45px height for 110px width based on previous HTML.
const calculatedHeight = height ?? 45; 
---

<Image
  src={logoImage} 
  alt="Okra Orders Logo"
  width={width}
  height={calculatedHeight}
  loading="eager"
  decoding="async"
  class:list={[className]}
/>
